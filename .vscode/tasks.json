{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "notify-send --app-name 'Visual Studio Code' 'Сборка Начата' '${relativeFile}'; v -g -enable-globals ${relativeFile}",
            "args": [ // or modify it according to your requirements
            ],
            "group": "build",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": {
                "owner": "v",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "finish",
            "type": "shell",
            "command": "notify-send --app-name 'Visual Studio Code' 'Сборка Завершена' '${relativeFile}'; play -q -v 0.05 '/home/vasm/Документы/performancesaved.wav'",
            "args": [
            ],
        }
    ]
}